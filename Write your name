#include <stdio.h>
int main(){
    char firstname [50],secondname [50],thirdname [50],fullname [100];
    printf("Enter your first name: ");
    scanf("%s", firstname);
    printf("Enter your second name: ");
    scanf("%s", secondname);
    printf("Enter your third name: ");
    scanf("%s", thirdname);
    sprintf(fullname,"%s %s %s", firstname, secondname, thirdname);
    printf("Your full name is: %s\n", fullname);
    return 0;
}
